{
  "functions": {
    "source": "functions",
    "codebase": "default",
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log",
      "*.local"
    ],
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  },
  "hosting": {
    "site": "bereshit-ac5d8",
    "public": "dist/chavat-bereshit/browser",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "**",
        "headers": [
          {
            "key": "Content-Security-Policy",
            "value": "default-src 'self'; connect-src 'self' https://identitytoolkit.googleapis.com https://securetoken.googleapis.com https://www.googleapis.com https://firebaseinstallations.googleapis.com https://api.tranzila.com https://hf.tranzila.com https://*.supabase.co https://us-central1-bereshit-ac5d8.cloudfunctions.net; img-src 'self' data: https:; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://www.gstatic.com https://www.google.com https://hf.tranzila.com https://api.tranzila.com; style-src 'self' 'unsafe-inline' https:; frame-src 'self' https://hf.tranzila.com; font-src 'self' data: https: https://hf.tranzila.com; media-src 'self' blob: data: https: https://hf.tranzila.com;"
          }
        ]
      },
      {
        "source": "/",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache, no-store, must-revalidate"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/api/sendEmail",
        "function": "sendEmail"
      },
      {
        "source": "/api/approveParentSignupRequest",
        "function": "approveParentSignupRequest"
      },
      {
        "source": "/api/publicCreateParentSignupRequest",
        "function": "publicCreateParentSignupRequest"
      },
      {
        "source": "/api/approveParentSignupRequest",
        "function": "approveParentSignupRequest"
      },
      {
        "source": "/api/chargeSelectedChargesForParent",
        "function": "chargeSelectedChargesForParent"
      },
      {
        "source": "/api/createHostedPaymentUrl",
        "function": "createHostedPaymentUrl"
      },
      {
        "source": "/api/tranzilaHandshake",
        "function": "tranzilaHandshake"
      },
      {
        "source": "/api/recordOneTimePayment",
        "function": "recordOneTimePayment"
      },
      {
        "source": "/api/savePaymentMethod",
        "function": "savePaymentMethod"
      },
      {
        "source": "/api/**",
        "function": "loginBootstrap"
      },
      {
        "source": "/api/sendEmailGmail",
        "function": "sendEmailGmail"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "ui": {
      "enabled": true,
      "port": 4000
    },
    "functions": {
      "port": 5001
    },
    "hosting": {
      "port": 5000
    },
    "singleProjectMode": true
  }
}