{
  "functions": {
    "source": "functions",
    "codebase": "default",
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log",
      "*.local"
    ],
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  },
  "hosting": {
    "site": "bereshit-ac5d8",
    "public": "dist/chavat-bereshit/browser",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "/index.html",
        "headers": [
          {
            "key": "Content-Security-Policy",
            "value": "default-src 'self'; frame-src https://hf.tranzila.com; script-src 'self' https://hf.tranzila.com 'unsafe-inline'; connect-src 'self' https://api.tranzila.com https://hf.tranzila.com; style-src 'self' 'unsafe-inline';"
          }
        ]
      },
      {
        "source": "/",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache, no-store, must-revalidate"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "loginBootstrap"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "ui": {
      "enabled": true,
      "port": 4000
    },
    "functions": {
      "port": 5001
    },
    "hosting": {
      "port": 5000
    },
    "singleProjectMode": true
  }
}